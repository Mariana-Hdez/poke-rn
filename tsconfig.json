{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["react", "react-native"]
  },
  "include": ["src/**/*", "App.tsx", "index.js"],
  "exclude": ["node_modules", "babel.config.js"]
}
